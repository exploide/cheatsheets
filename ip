# Create bridge, connect interface
ip l add mybr0 type bridge
ip l set mybr0 up
ip l set enp0s31f6 up
ip l set enp0s31f6 master mybr0

# Remove interface from bridge, delete bridge
ip l set enp0s31f6 nomaster
ip l delete mybr0

# Enable VLAN tagging on interface
ip l add link enp0s31f6 name enp0s31f6.100 type vlan id 100
ip l set dev enp0s31f6.100 up
dhcpcd enp0s31f6.100   # or add IP manually before setting device up

# Remove VLAN-enabled interface
ip l set dev enp0s31f6.100 down
ip l delete enp0s31f6.100

# Create and use network namespace
ip netns add mynetns
ip l set dev enp0s31f6 netns mynetns
ip netns exec mynetns fish
